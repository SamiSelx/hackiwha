{
  "name": "hackiwha-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "server:dev": "nodemon index.ts",
    "server:start": "node dist/index.js",
    "server:build": "tsc ",
    "server:all": "npm run server:build && npm run server:start",
    "lint:check": "eslint . --ext .ts --ignore-path .gitignore",
    "lint:fix": "npm run lint:check -- --fix"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "**/static/**",
      "**/views/**"
    ],
    "delay": 5000
  },
  "author": "y.abderrahmane",
  "license": "MIT",
  "description": "Backend for hackiwha hackathon project",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.2",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "mkcert": "^3.2.0",
    "mongoose": "^8.1.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.17",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0"
  }
}
